{
	"name": "sparrow-starter",
	"scripts": {
		"start:openai": "bun src/examples/openai.ts",
		"start:anthropic": "bun src/examples/anthropic.ts",
		"format": "prettier --write \"src/**/*.{js,ts,json,md}\"",
		"format:check": "prettier --check \"src/**/*.{js,ts,json,md}\"",
		"lint": "eslint \"src/**/*.{js,ts}\"",
		"lint:fix": "eslint \"src/**/*.{js,ts}\" --fix"
	},
	"devDependencies": {
		"@eslint/compat": "1.2.6",
		"@eslint/eslintrc": "3.2.0",
		"@eslint/js": "9.20.0",
		"@types/bun": "latest",
		"@types/figlet": "1.7.0",
		"@typescript-eslint/eslint-plugin": "8.24.0",
		"@typescript-eslint/parser": "8.24.0",
		"eslint": "9.20.1",
		"eslint-config-prettier": "10.0.1",
		"globals": "15.14.0",
		"prettier": "3.5.0",
		"typescript": "5.7.3"
	},
	"dependencies": {
		"@sparrowstack/sparrow": "link:@sparrowstack/sparrow",
		"@sparrowstack/interactive-terminal": "link:@sparrowstack/interactive-terminal",
		"@sparrowstack/system-prompts": "link:@sparrowstack/system-prompts",
		"@sparrowstack/tools": "link:@sparrowstack/tools"
	},
	"peerDependencies": {
		"typescript": "^5.0.0"
	}
}
